<resources>
    <!-- Base application theme. -->
    <style name="Theme.MiraiWeather.Simple" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="colorControlNormal">#2980B9</item> <!-- Untuk normal state -->
        <item name="colorControlActivated">#2980B9</item> <!-- Untuk activated state -->
        <item name="android:editTextColor">#2980B9</item>
        <item name="android:textColor">#2980B9</item>
        <item name="android:textColorHint">#2980B9</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor_style</item>
    </style>
</resources>